
<%- include('header'); -%>
    <div class='box heading'>
        <h1>
            <%= kindOfDay %>
        </h1>
    </div>

    <div class="box ">
            <% newTodoList.forEach(function(newTodoList){ %>
            <div class="item">    
                <input type="checkbox">
                <p>
                    <%= newTodoList.todoListItem %>
                </p>
                <form action="/delete" method="POST" class="delete-btn">
                    <button name='delete' value="<%= newTodoList.todoListItem %>" class='delete hidden'>
                        delete
                    </button>
                </form>
            </div>
                <% }) %>

        <form action="/" method="POST"  >
            <input type="text" name="todo" placeholder="New todo">
            <button class='btn' type="submit" name="button">+</button>
        </form>
    </div>

  

<%- include('footer'); -%>